{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20",
                "${file}",
                "-o",
                "${fileDirname}\\a.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "compiler: C:\\msys64\\ucrt64\\bin\\g++.exe"
        },
        {
            "label": "Run a.exe",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoExit",
                "-Command",
                ".\\a.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": "C/C++: g++ build",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
